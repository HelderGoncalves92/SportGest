<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studentcompany.sportgest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EventCategories.DisplayEventCategoryActivity" />
        <activity
            android:name=".EventCategories.ListEventCategoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Users.UserListActivity" />
        <activity android:name=".Players.PlayersList_Activity" />
        <activity android:name=".Attributes.AttributeListActivity" />
        <activity android:name=".Exercises.ExerciseListActivity" />
        <activity android:name=".Trainings.TrainingListActivity" />

        <activity android:name=".Attributes.CreateAttributeActivity"
            android:label="@string/app_newAttribute"/>
        <activity android:name=".Exercises.CreateExerciseActivity"
            android:label="@string/app_newExercise"/>
        <activity android:name=".Trainings.CreateTrainingActivity"
            android:label="@string/app_newTraining"/>
        <activity android:name=".Users.CreateUser_Activity"
            android:label="@string/app_newUser"/>
        <activity android:name=".Players.CreatePlayer_Activity"
            android:label="@string/app_newPlayer"/>
    </application>

</manifest>
