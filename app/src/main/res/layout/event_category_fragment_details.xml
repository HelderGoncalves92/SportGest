<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/no_Selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24dp"
            android:text="@string/NoSelected_Team"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/frame_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">



            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="@dimen/text_size_default"
                        android:id="@+id/textView52" />

                    <EditText
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:enabled="false"
                        android:textSize="@dimen/text_size_default"
                        android:hint="@string/category" />

                </LinearLayout>

            </android.support.design.widget.TextInputLayout>







            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Color"
                    android:textSize="@dimen/text_size_default"
                    android:id="@+id/eventcolor"
                    android:paddingEnd="20dp"
                    android:paddingStart="5dp"
                    android:password="false" />


                <Button
                    android:id="@+id/btnChangeColorEventCatDetails"
                    android:layout_width="36dp"
                    android:layout_height="27dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:text="-----"
                    android:textSize="@dimen/text_size_default" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/hastimestamp"
                    android:id="@+id/checkbox_event_details_hasTime" />

            </LinearLayout>

        </LinearLayout>

</ScrollView>
    </RelativeLayout>