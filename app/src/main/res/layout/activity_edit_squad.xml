<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studentcompany.sportgest.Players.CreateRole_Activity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_create_squad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_permissions"
                android:text="Player Name"
                android:layout_weight="0.57" />

            <Spinner
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_select"
                android:inputType="textNoSuggestions"
                android:hint="@string/hint_name"/>

        </LinearLayout>

    </android.support.design.widget.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout_Squad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_squad_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_permissions"
            android:text="Squad" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:padding="20dp">

        <ListView
            android:id="@+id/squad_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>

</LinearLayout>