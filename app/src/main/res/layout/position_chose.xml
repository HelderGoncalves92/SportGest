<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studentcompany.sportgest.Player.EditPosition_Activity"
    android:clickable="true">


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_create_positions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_permissions"
                android:text="Position Name" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/player_edit_position_player_select"
                    android:inputType="textNoSuggestions"
                    android:hint="@string/hint_name"/>

                <NumberPicker
                    android:layout_width="49dp"
                    android:layout_height="123dp"
                    android:id="@+id/numberPicker" />


            </LinearLayout>



        </LinearLayout>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnAddSelected"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add Selected" />

        <Button
            android:id="@+id/btnRemoveSelected"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Remove Selected" />


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout_positions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_positions_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_permissions"
            android:text="Positions" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ListView
            android:id="@+id/player_edit_position_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:choiceMode="singleChoice"
            android:listSelector="#666666"/>

    </LinearLayout>

</LinearLayout>