<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingBottom="10dp"
    app:contentPaddingTop="10dp"
    android:layout_marginBottom="1dp"
    android:paddingLeft="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/name_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/HomeTeamN"/>

                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/team1"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/score_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_default"
                        android:textAlignment="textEnd"
                        android:minWidth="20dp"
                        android:text="0"/>

                </android.support.v7.widget.LinearLayoutCompat>


            </RelativeLayout>
            <!--
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Home Team"/>

            <ImageView
                android:id="@+id/image_home"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/team1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/score_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_default"
                android:textAlignment="textEnd"
                android:minWidth="20dp"
                android:text="0"/>
            -->

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/score_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:textSize="@dimen/text_size_default"
                android:text="0"/>


            <ImageView
                android:id="@+id/image_visitor"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/team2"/>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/name_visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_default"
                android:paddingLeft="10dp"
                android:text="@string/VisitorTeamN"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>