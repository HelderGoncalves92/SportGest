<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- TODO all -->

    <TextView
        android:id="@+id/training_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Name" />

    <TextView
        android:id="@+id/training_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Date" />

    <TextView
        android:id="@+id/training_total_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Total Duration" />

    <TextView
        android:id="@+id/training_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Description" />

    <TextView
        android:id="@+id/training_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Team" />


</LinearLayout>
