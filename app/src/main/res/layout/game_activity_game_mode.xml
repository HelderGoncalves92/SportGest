<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="studentcompany.sportgest.Games.Game_Activity_GameMode">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <FrameLayout
            android:id="@+id/game_InGame_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_swap_vert_black_24dp"/>

        <FrameLayout
            android:id="@+id/game_OnBench_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        
        <FrameLayout
            android:id="@+id/game_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:background="@drawable/futsal_field"/>

        <FrameLayout
            android:id="@+id/game_EventCategory_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"/>

    </LinearLayout>


</LinearLayout>
